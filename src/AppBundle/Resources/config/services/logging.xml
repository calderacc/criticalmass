<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="true"/>

        <service id="gelf.transport" class="Gelf\Transport\UdpTransport">
            <argument type="string">%graylog.hostname%</argument>
            <argument type="string">%graylog.port%</argument>
        </service>

        <service id="gelf.publisher" class="Gelf\Publisher">
            <call method="addTransport">
                <argument type="service" id="gelf.transport"/>
            </call>
        </service>

        <service id="monolog.gelf_handler" class="Monolog\Handler\GelfHandler">
            <argument type="service" id="gelf.publisher"/>
            <argument type="string">error</argument>
        </service>

        <service id="CalendR\Calendar">
            <call method="setEventManager">
                <argument type="service" id="CalendR\Event\Manager"/>
            </call>
        </service>

        <service id="CalendR\Event\Manager">
            <call method="addProvider">
                <argument type="string">ride_provider</argument>
                <argument type="service" id="Criticalmass\Bundle\AppBundle\Criticalmass\Calendar\EventProvider\RideProvider"/>
            </call>
        </service>

        <service id="Criticalmass\Bundle\AppBundle\Criticalmass\Calendar\EventProvider\RideProvider"/>
    </services>
</container>
