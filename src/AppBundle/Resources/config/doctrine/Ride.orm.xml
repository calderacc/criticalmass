<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Ride" repository-class="AppBundle\Repository\RideRepository" table="ride">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="string" length="255" nullable="true"/>
    <field name="description" type="text" nullable="true"/>
    <field name="socialDescription" type="text" nullable="true"/>
    <field name="dateTime" type="datetime" nullable="true"/>
    <field name="hasTime" type="boolean" nullable="true"/>
    <field name="hasLocation" type="boolean" nullable="true"/>
    <field name="location" type="string" length="255" nullable="true"/>
    <field name="latitude" type="float" nullable="true"/>
    <field name="longitude" type="float" nullable="true"/>
    <field name="estimatedParticipants" type="smallint" nullable="true"/>
    <field name="estimatedDistance" type="float" nullable="true"/>
    <field name="estimatedDuration" type="float" nullable="true"/>
    <field name="facebook" type="string" length="255" nullable="true"/>
    <field name="twitter" type="string" length="255" nullable="true"/>
    <field name="url" type="string" length="255" nullable="true"/>
    <field name="createdAt" type="datetime" nullable="false"/>
    <field name="updatedAt" type="datetime" nullable="true"/>
    <field name="participationsNumberYes" type="integer" nullable="true"/>
    <field name="participationsNumberMaybe" type="integer" nullable="true"/>
    <field name="participationsNumberNo" type="integer" nullable="true"/>
    <field name="views" type="integer" nullable="true"/>
    <field name="restrictedPhotoAccess" type="boolean" nullable="true"/>
    <field name="imageName" type="string" length="255" nullable="true"/>
    <many-to-one field="user" target-entity="AppBundle\Entity\User" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="cycle" target-entity="AppBundle\Entity\CityCycle" inversed-by="rides" fetch="LAZY">
      <join-columns>
        <join-column name="cycle_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="city" target-entity="AppBundle\Entity\City" inversed-by="rides" fetch="LAZY">
      <join-columns>
        <join-column name="city_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="featuredPhoto" target-entity="AppBundle\Entity\Photo" fetch="LAZY">
      <join-columns>
        <join-column name="featured_photo" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="participations" target-entity="AppBundle\Entity\Participation" mapped-by="ride" fetch="LAZY"/>
    <one-to-many field="photos" target-entity="AppBundle\Entity\Photo" mapped-by="ride" fetch="LAZY"/>
    <one-to-many field="posts" target-entity="AppBundle\Entity\Post" mapped-by="ride" fetch="LAZY"/>
    <one-to-many field="estimates" target-entity="AppBundle\Entity\RideEstimate" mapped-by="ride" fetch="LAZY"/>
    <one-to-many field="subrides" target-entity="AppBundle\Entity\Subride" mapped-by="ride" fetch="LAZY"/>
    <one-to-many field="tracks" target-entity="AppBundle\Entity\Track" mapped-by="ride" fetch="LAZY"/>
    <one-to-many field="weathers" target-entity="AppBundle\Entity\Weather" mapped-by="ride" fetch="LAZY">
      <order-by>
        <order-by-field name="creationDateTime" direction="DESC"/>
      </order-by>
    </one-to-many>
  </entity>
</doctrine-mapping>
