<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Region" repository-class="AppBundle\Repository\RegionRepository" table="region">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="slug" type="string" length="255" nullable="true"/>
    <field name="name" type="string" length="255" nullable="true"/>
    <field name="description" type="text" nullable="true"/>
    <many-to-one field="parent" target-entity="AppBundle\Entity\Region" inversed-by="children">
      <join-columns>
        <join-column name="parent_id" referenced-column-name="id"/>
      </join-columns>
      <cascade>
        <cascade-persist/>
      </cascade>
    </many-to-one>
    <one-to-many field="cities" target-entity="AppBundle\Entity\City" mapped-by="region"/>
    <one-to-many field="children" target-entity="AppBundle\Entity\Region" mapped-by="parent"/>
  </entity>
</doctrine-mapping>
