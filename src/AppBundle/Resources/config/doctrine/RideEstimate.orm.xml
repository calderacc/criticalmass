<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\RideEstimate" repository-class="AppBundle\Repository\RideEstimateRepository" table="ride_estimate">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="latitude" type="float" nullable="true"/>
    <field name="longitude" type="float" nullable="true"/>
    <field name="estimatedParticipants" type="smallint" nullable="true"/>
    <field name="estimatedDistance" type="float" nullable="true"/>
    <field name="estimatedDuration" type="float" nullable="true"/>
    <field name="dateTime" type="datetime" nullable="true"/>
    <many-to-one field="user" target-entity="AppBundle\Entity\User" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="ride" target-entity="AppBundle\Entity\Ride" inversed-by="estimates" fetch="LAZY">
      <join-columns>
        <join-column name="ride_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
