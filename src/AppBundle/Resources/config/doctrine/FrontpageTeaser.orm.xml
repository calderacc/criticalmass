<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\FrontpageTeaser" repository-class="AppBundle\Repository\FrontpageTeaserRepository" table="frontpage_teaser">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="headline" type="text" nullable="true"/>
    <field name="text" type="text" nullable="true"/>
    <field name="imageName" type="string" length="255" nullable="true"/>
    <field name="position" type="smallint" nullable="true"/>
    <field name="createdAt" type="datetime" nullable="false"/>
    <field name="updatedAt" type="datetime" nullable="true"/>
    <field name="validFrom" type="datetime" nullable="true"/>
    <field name="validUntil" type="datetime" nullable="true"/>
    <many-to-one field="user" target-entity="AppBundle\Entity\User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="city" target-entity="AppBundle\Entity\City">
      <join-columns>
        <join-column name="city_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="buttons" target-entity="AppBundle\Entity\FrontpageTeaserButton" mapped-by="frontpageTeaser">
      <order-by>
        <order-by-field name="position" direction="ASC"/>
      </order-by>
    </one-to-many>
  </entity>
</doctrine-mapping>
