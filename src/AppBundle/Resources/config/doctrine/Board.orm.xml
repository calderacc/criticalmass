<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Board" repository-class="AppBundle\Repository\BoardRepository" table="board">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="text" nullable="true"/>
    <field name="description" type="text" nullable="true"/>
    <field name="threadNumber" type="integer" nullable="true"/>
    <field name="postNumber" type="integer" nullable="true"/>
    <field name="position" type="integer" nullable="true"/>
    <field name="enabled" type="boolean" nullable="true"/>
    <field name="slug" type="string" length="255" nullable="true"/>
    <one-to-one field="lastThread" target-entity="AppBundle\Entity\Thread">
      <join-columns>
        <join-column name="lastthread_id" referenced-column-name="id" unique="true"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
