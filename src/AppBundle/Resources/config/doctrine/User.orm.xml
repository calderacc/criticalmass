<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\User" table="fos_user_user">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="colorRed" type="smallint" nullable="true"/>
    <field name="colorGreen" type="smallint" nullable="true"/>
    <field name="colorBlue" type="smallint" nullable="true"/>
    <field name="blurGalleries" type="boolean" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="updatedAt" type="datetime" nullable="true"/>
    <field name="createdAt" type="datetime" nullable="true"/>
    <field name="facebookId" type="string" length="255" nullable="true" column="facebook_id"/>
    <field name="facebookAccessToken" type="string" length="255" nullable="true" column="facebook_access_token"/>
    <field name="stravaId" type="string" length="255" nullable="true" column="strava_id"/>
    <field name="stravaAccessToken" type="string" length="255" nullable="true" column="strava_access_token"/>
    <field name="runkeeperId" type="string" length="255" nullable="true" column="runkeeper_id"/>
    <field name="runkeeperAccessToken" type="string" length="255" nullable="true" column="runkeeper_access_token"/>
    <lifecycle-callbacks>
      <lifecycle-callback type="prePersist" method="prePersist"/>
      <lifecycle-callback type="preUpdate" method="preUpdate"/>
    </lifecycle-callbacks>
    <one-to-many field="bikerightVouchers" target-entity="AppBundle\Entity\BikerightVoucher" mapped-by="user"/>
    <one-to-many field="participations" target-entity="AppBundle\Entity\Participation" mapped-by="user"/>
    <one-to-many field="tracks" target-entity="AppBundle\Entity\Track" mapped-by="user">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>
