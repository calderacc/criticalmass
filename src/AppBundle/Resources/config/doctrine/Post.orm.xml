<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Post" repository-class="AppBundle\Repository\PostRepository" table="post">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="latitude" type="float" nullable="true"/>
    <field name="longitude" type="float" nullable="true"/>
    <field name="dateTime" type="datetime" nullable="true"/>
    <field name="message" type="text" nullable="true"/>
    <field name="enabled" type="boolean" nullable="true"/>
    <many-to-one field="parent" target-entity="AppBundle\Entity\Post" inversed-by="children">
      <join-columns>
        <join-column name="parent_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="AppBundle\Entity\User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="ride" target-entity="AppBundle\Entity\Ride" inversed-by="posts">
      <join-columns>
        <join-column name="ride_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="city" target-entity="AppBundle\Entity\City" inversed-by="posts">
      <join-columns>
        <join-column name="city_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="thread" target-entity="AppBundle\Entity\Thread">
      <join-columns>
        <join-column name="thread_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="photo" target-entity="AppBundle\Entity\Photo">
      <join-columns>
        <join-column name="photo_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="children" target-entity="AppBundle\Entity\Post" mapped-by="parent"/>
  </entity>
</doctrine-mapping>
