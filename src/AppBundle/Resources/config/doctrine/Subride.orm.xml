<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Subride" repository-class="AppBundle\Repository\SubrideRepository" table="subride">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="string" length="255" nullable="true"/>
    <field name="description" type="text" nullable="true"/>
    <field name="dateTime" type="datetime" nullable="true"/>
    <field name="createdAt" type="datetime" nullable="false"/>
    <field name="updatedAt" type="datetime" nullable="true"/>
    <field name="location" type="string" length="255" nullable="true"/>
    <field name="latitude" type="float" nullable="true"/>
    <field name="longitude" type="float" nullable="true"/>
    <field name="facebook" type="string" length="255" nullable="true"/>
    <field name="twitter" type="string" length="255" nullable="true"/>
    <field name="url" type="string" length="255" nullable="true"/>
    <many-to-one field="ride" target-entity="AppBundle\Entity\Ride" inversed-by="subrides">
      <join-columns>
        <join-column name="ride_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="AppBundle\Entity\User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
