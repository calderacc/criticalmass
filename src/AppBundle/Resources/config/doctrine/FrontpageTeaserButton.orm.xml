<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\FrontpageTeaserButton" table="frontpage_teaser_button">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="caption" type="string" length="255" nullable="true"/>
    <field name="icon" type="string" length="32" nullable="true"/>
    <field name="link" type="string" length="255" nullable="true"/>
    <field name="class" type="string" length="255" nullable="true"/>
    <field name="position" type="smallint" nullable="true"/>
    <field name="createdAt" type="datetime" nullable="false"/>
    <field name="updatedAt" type="datetime" nullable="true"/>
    <many-to-one field="frontpageTeaser" target-entity="AppBundle\Entity\FrontpageTeaser" inversed-by="buttons">
      <join-columns>
        <join-column name="teaser_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
