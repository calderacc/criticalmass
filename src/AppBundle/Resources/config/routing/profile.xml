<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="criticalmass_user_usermanagement" path="/profile/">
        <default key="_controller">AppBundle:Profile/ProfileManagement:manage</default>
    </route>

    <route id="criticalmass_user_usermanagement_editusername" path="/profile/username">
        <default key="_controller">AppBundle:Profile/ProfileManagement:editUsername</default>
    </route>

    <route id="criticalmass_user_usermanagement_editemail" path="/profile/email">
        <default key="_controller">AppBundle:Profile/ProfileManagement:editEmail</default>
    </route>

    <route id="criticalmass_user_participation_list" path="/profile/participation/list">
        <default key="_controller">AppBundle:Profile/Participation:list</default>
    </route>

    <route id="criticalmass_user_participation_update" path="/profile/participation/{participationId}/update">
        <default key="_controller">AppBundle:Profile/Participation:update</default>
    </route>

    <route id="criticalmass_user_participation_delete" path="/profile/participation/{participationId}/delete">
        <default key="_controller">AppBundle:Profile/Participation:delete</default>
    </route>

    <route id="criticalmass_user_profile_cancel" path="/profile/cancel">
        <default key="_controller">UserBundle:ProfileCancelation:cancel</default>
    </route>

    <route id="criticalmass_user_profile_photo" path="/profile/profilephoto">
        <default key="_controller">AppBundle:Profile/ProfilePhoto:upload</default>
    </route>

    <route id="criticalmass_user_bikeright_view" path="/profile/bikeright">
        <default key="_controller">AppBundle:Profile/Bikeright:view</default>
    </route>

    <route id="criticalmass_user_bikeright_generate" path="/profile/bikeright/generate">
        <default key="_controller">AppBundle:Profile/Bikeright:generate</default>
    </route>
</routes>
