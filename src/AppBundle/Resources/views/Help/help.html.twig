{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% macro renderCategory(category) %}
    <div class="row">
        <div class="col-md-12">
            <h3>
                {{ category.title }}
            </h3>

            <p class="lead">
                {{ category.intro }}
            </p>

            {% for item in category.items %}
                <h4>
                    {{ item.title }}
                </h4>

                {{ item.text|markdown }}
            {% endfor %}
        </div>
    </div>
{% endmacro %}

