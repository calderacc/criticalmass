{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Häufig gestellte Fragen zu criticalmass.in{% endblock %}

{% block breadcrumb %}
    <li class="active">
        Hilfe
    </li>
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>
                Häufig gestellte Fragen zu dieser Webseite
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% for category in helpCategories %}
                <div class="row">
                    <div class="col-md-12">
                        <h3>
                            {{ category.title }}
                        </h3>

                        <p class="lead">
                            {{ category.intro }}
                        </p>

                        {% for item in category.items %}
                            <h4>
                                {{ item.title }}
                            </h4>

                            {{ item.text|markdown }}
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
