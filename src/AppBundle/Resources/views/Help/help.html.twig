{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>
                {{ mainCategory.title }}
            </h1>

            {% if mainCategory.intro %}
                <p class="lead">
                    {{ mainCategory.intro }}
                </p>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% for category in mainCategory.children %}
                {% if category.side == 'left' %}
                    {{ categoryMacro.renderCategory(category) }}
                {% endif %}
            {% endfor %}
        </div>

        <div class="col-md-6">
            {% for category in mainCategory.children %}
                {% if category.side == 'right' %}
                    {{ categoryMacro.renderCategory(category) }}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
