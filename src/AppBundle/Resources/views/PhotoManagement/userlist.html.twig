{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Fotos sortieren{% endblock %}

{% block breadcrumb %}
    <li class="active">
        Fotos sortieren
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Fotos sortieren</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Datum</th>
                            <th>Stadt</th>
                            <th>Tour</th>
                            <th>Anzahl</th>
                            <th>Optionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in result %}
                        {% set photo = row[0] %}
                        {% set counter = row[1] %}
                        <tr>
                            <td>
                                {{ photo.ride.dateTime.format('d. m. Y') }}
                            </td>
                            <td>
                                <a href="{{ path('caldera_criticalmass_desktop_city_show', { 'citySlug': photo.ride.city.getMainSlugString() }) }}">
                                    {{ photo.ride.city.city }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('caldera_criticalmass_ride_show', { 'citySlug': photo.ride.city.getMainSlugString(), 'rideDate': photo.ride.getFormattedDate() }) }}">
                                    {{ photo.ride.getFancyTitle() }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('caldera_criticalmass_photo_manage', { 'citySlug': photo.ride.city.getMainSlugString(), 'rideDate': photo.ride.getFormattedDate() }) }}">
                                    {{ counter }}
                                </a>
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="...">
                                    <a class="btn btn-default btn-xs" title="Herunterladen"
                                       href="{{ path('caldera_criticalmass_photo_manage', { 'citySlug': photo.ride.city.getMainSlugString(), 'rideDate': photo.ride.getFormattedDate() }) }}">
                                        <i class="fa fa-picture-o"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}

                    {% if result|length == 0 %}
                        <tr>
                            <td colspan="7">
                                <div class="alert alert-info">
                                    <strong>Schade:</strong> Du hast bislang keine Fotos hochgeladen. Du kannst auf der Ãœbersichtsseite einer Tour Fotos hochladen.
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
