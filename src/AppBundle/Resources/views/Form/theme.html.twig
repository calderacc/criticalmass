{% use "form_div_layout.html.twig" %}

{% block form_errors -%}
    {% if errors|length > 0 -%}
        <div class="alert alert-danger">
            <ul class="list-unstyled mb-0">
                {%- for error in errors -%}
                    <li>
                        {{ error.message }}
                    </li>
                {%- endfor -%}
            </ul>
        </div>
    {%- endif %}
{%- endblock form_errors %}
