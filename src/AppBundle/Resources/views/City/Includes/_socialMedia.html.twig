{% set hasSocialMedia = city.getUrl() or city.getFacebook() or city.getTwitter() %}

{% if hasSocialMedia %}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                Soziale Netze
            </h4>

            {% if city.url %}
                <a class="btn btn-link" href="{{ city.url }}">
                    <i class="fa fa-home"></i>
                    {{ hostname(city.url) }}
                </a>
            {% endif %}

            {% if city.facebook %}
                <a class="btn btn-link" href="{{ city.facebook }}">
                    <i class="fa fa-facebook"></i>
                    {{ facebookIdentifier(city.facebook) }}
                </a>
            {% endif %}

            {% if city.twitter %}
                <a class="btn btn-link" href="{{ city.twitter }}">
                    <i class="fa fa-twitter"></i>
                    {{ twitterUsername(city.twitter) }}
                </a>
            {% endif %}
        </div>
    </div>
{% endif %}