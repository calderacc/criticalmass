{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Städte-Übersicht{% endblock %}

{% block breadcrumb %}

    <li>
        <a href="{{ path('caldera_criticalmass_desktop_city_list') }}">
            Städteliste
        </a>
    </li>
    <li>
        <a href="{{ objectPath(city) }}">
            {{ city.city }}
        </a>
    </li>
    <li class="active">
        Foto-Galerien
    </li>
{% endblock %}
    
{% block content %}
    <div class="container main-container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Fotos aus {{ city.city }}
                </h1>

                <p class="lead">
                    Hier siehst du eine Übersicht von Critical-Mass-Touren aus {{ city.city }}, zu denen Fotos
                    hochgeladen wurden.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table id="cityRideList" class="table">
                    <thead>
                    <tr>
                        <th>
                            Datum
                        </th>
                        <th>
                            Titel
                        </th>
                        <th>
                            Fotos
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, ride in result.rides %}
                        <tr class="ride">
                            <td>
                                <a href="{{ objectPath(ride) }}">
                                    {{ ride.dateTime.format('d.m.Y') }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ objectPath(ride) }}">
                                    {{ ride.getFancyTitle() }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('caldera_criticalmass_photo_ride_list', { 'citySlug': city.slug, 'rideDate': ride.getFormattedDate() }) }}">
                                    {{ result.counter[key] }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}