<div class="row margin-bottom-medium">
    {{ include('AppBundle:Timeline/_includes:user_column.html.twig') }}

    <div class="col-xs-9 col-sm-9 col-md-10 col-lg-10">
        <div class="row">
            <div class="col-md-12">
                <strong>
                    {{ item.username }}
                </strong>
                hat ein Foto kommentiert:
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <img src="{{ vich_uploader_asset(item.photo, 'imageFile')|imagine_filter('gallery_photo_thumb') }}"
                     class="img-responsive"/>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{ objectPath(item.photo) }}">
                    <h4>
                        {{ item.rideTitle }}
                    </h4>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <p>
                    {{ item.text|slice(0, 140)|markdown }}â€¦
                </p>
            </div>
        </div>
    </div>
</div>
