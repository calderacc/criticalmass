{% extends 'AppBundle:Template:MasterTemplate.html.twig' %}

{% block title %}criticalmass.in{% endblock %}

{% block masterContent %}
    <div class="navbar-wrapper">
    {% include('AppBundle:Template/Navigation:_navigation.html.twig') %}
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {{ include('AppBundle:Frontpage:_carousel.html.twig') }}
            </div>
        </div>
    </div>

    <div class="container margin-top-medium">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="no-margin-top">
                            Hej, wir fahren Fahrrad!
                        </h1>

                        <p class="lead">
                            In fast jeder großen Stadt treffen sich am letzten Freitag im Monat Radfahrer zu einer
                            gemeinsamen Ausfahrt. Sei mit dabei und schau dir an, was es alles zu entdecken gibt.
                        </p>
                    </div>
                </div>

                <div class="row hidden-xs hidden-sm">
                    <div class="col-md-12">
                        {{ timelineContent|raw }}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-bikeright">
                            <div class="panel-body">
                                <a href="https://bikeright.de/">
                                    <img class="media-object" src="{{ asset('/bundles/app/images/bikeright/logo.png') }}" alt="..." style="width: 273px; height 51px; margin: 0 auto;" />
                                </a>

                                <h3 class="h5 text-center">
                                    Die neue Online-Rechtsberatung für Radfahrer
                                </h3>

                                <div class="media">
                                    <div class="media-left">
                                        <a href="https://bikeright.de/">
                                            <img class="media-object" src="{{ asset('/bundles/app/images/bikeright/help.png') }}" alt="..." style="width: 50px; height: 50px;" />
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading">
                                            Fahrradunfall gehabt?
                                        </h4>

                                        <p>
                                            Unsere Anwälte beraten und vertreten euch kostenfrei!
                                        </p>

                                        <p>
                                            <a href="https://bikeright.de/" class="btn btn-bikeright">
                                                Zur Website
                                            </a>
                                        </p>
                                    </div>
                                </div>

                                <div class="media">
                                    <div class="media-left">
                                        <a href="{{ path('criticalmass_user_bikeright_view') }}">
                                            <img class="media-object" src="{{ asset('/bundles/app/images/bikeright/phone.png') }}" alt="..." style="width: 50px; height: 50px;" />
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading">
                                            Fragen zum Fahrradrecht?
                                        </h4>

                                        <p>
                                            Als Community-Mitglied erhälst du ab sofort 30% Rabatt.
                                        </p>

                                        <p>
                                            <a href="{{ path('criticalmass_user_bikeright_view') }}" class="btn btn-bikeright">
                                                Jetzt Rabatt-Code anfordern
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    Bald unterwegs
                                </h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    {% for rideDate, rides in rideList %}
                                        <li>
                                            <h4>
                                                {{ rideDate|format_date('dd. MMMM YYYY') }}
                                            </h4>

                                            <ul>
                                                {% for ride in rides %}
                                                    <li>
                                                        <a href="{{ objectPath(ride) }}">
                                                            {{ ride.getFancyTitle() }}
                                                        </a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include('AppBundle:Template:Includes/_adserver.html.twig') %}

    {% include('AppBundle:Template:Includes/_footer.html.twig') %}

    {% include('AppBundle:Template:Includes/_piwik.html.twig') %}
{% endblock %}
