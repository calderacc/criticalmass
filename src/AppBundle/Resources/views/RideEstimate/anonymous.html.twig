{% extends 'AppBundle:Template:MasterTemplate.html.twig' %}

{% block title %}{% endblock title %}

{% block masterContent %}
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <h3>
                    Teilnehmerzahl erg√§nzen
                </h3>

                <p>
                    Wie viele Teilnehmer sind an der Critical Mass in <strong>{{ ride.city.city }}</strong> am
                    <strong>{{ ride.dateTime|format_date(null, 'de', ride.city.timezone, constant('IntlDateFormatter::LONG')) }}</strong>
                    mitgefahren?
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_start(estimateForm) }}

