                        </label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_widget(estimateForm.estimatedParticipants) }}
                    </div>
                </div>

                <div class="row margin-top-medium">
                    <div class="col-md-12">
                        <button class="btn btn-primary" type="submit">
                            Absenden
                        </button>
                    </div>
                </div>
                {{ form_end(estimateForm) }}
            </div>
        </div>
    </div>
{% endblock masterContent %}
