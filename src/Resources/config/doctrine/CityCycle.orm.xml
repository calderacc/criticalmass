<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\CityCycle" repository-class="AppBundle\Repository\CityCycleRepository" table="city_cycle">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="dayOfWeek" type="smallint" nullable="false"/>
    <field name="weekOfMonth" type="smallint" nullable="true"/>
    <field name="time" type="time" nullable="true"/>
    <field name="location" type="string" nullable="true"/>
    <field name="latitude" type="float" nullable="true"/>
    <field name="longitude" type="float" nullable="true"/>
    <field name="createdAt" type="datetime" nullable="false"/>
    <field name="updatedAt" type="datetime" nullable="true"/>
    <field name="validFrom" type="date" nullable="true"/>
    <field name="validUntil" type="date" nullable="true"/>
    <many-to-one field="city" target-entity="AppBundle\Entity\City" inversed-by="cycles">
      <join-columns>
        <join-column name="city_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="AppBundle\Entity\User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="rides" target-entity="AppBundle\Entity\Ride" mapped-by="cycle">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>
