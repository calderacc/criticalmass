<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\HelpCategory" table="help_category">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="language" type="string" length="16" nullable="true"/>
    <field name="title" type="string" length="255" nullable="false"/>
    <field name="intro" type="text" nullable="true"/>
    <field name="side" type="string" nullable="true"/>
    <field name="position" type="smallint" nullable="true"/>
    <many-to-one field="user" target-entity="AppBundle\Entity\User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="parent" target-entity="AppBundle\Entity\HelpCategory" inversed-by="children">
      <join-columns>
        <join-column name="parent_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="children" target-entity="AppBundle\Entity\HelpCategory" mapped-by="parent"/>
    <one-to-many field="items" target-entity="AppBundle\Entity\HelpItem" mapped-by="category"/>
  </entity>
</doctrine-mapping>
