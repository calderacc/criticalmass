<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Participation" repository-class="AppBundle\Repository\ParticipationRepository" table="participation">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="dateTime" type="datetime" nullable="true"/>
    <field name="goingYes" type="boolean" nullable="true"/>
    <field name="goingMaybe" type="boolean" nullable="true"/>
    <field name="goingNo" type="boolean" nullable="true"/>
    <many-to-one field="ride" target-entity="AppBundle\Entity\Ride" inversed-by="participations">
      <join-columns>
        <join-column name="ride_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="AppBundle\Entity\User" inversed-by="participations">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
