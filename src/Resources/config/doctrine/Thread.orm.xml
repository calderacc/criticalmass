<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Thread" repository-class="AppBundle\Repository\ThreadRepository" table="thread">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="text" nullable="true"/>
    <field name="slug" type="string" length="255" nullable="true"/>
    <field name="views" type="integer" nullable="true"/>
    <field name="postNumber" type="integer" nullable="true"/>
    <field name="enabled" type="boolean" nullable="true"/>
    <one-to-one field="firstPost" target-entity="AppBundle\Entity\Post">
      <join-columns>
        <join-column name="firstpost_id" referenced-column-name="id" unique="true"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="lastPost" target-entity="AppBundle\Entity\Post">
      <join-columns>
        <join-column name="lastpost_id" referenced-column-name="id" unique="true"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="board" target-entity="AppBundle\Entity\Board">
      <join-columns>
        <join-column name="board_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="city" target-entity="AppBundle\Entity\City">
      <join-columns>
        <join-column name="city_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
