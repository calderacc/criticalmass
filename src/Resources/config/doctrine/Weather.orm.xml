<?xml version="1.0"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Weather" repository-class="AppBundle\Repository\WeatherRepository" table="weather">
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="json" type="text" nullable="true"/>
    <field name="weatherDateTime" type="datetime" nullable="true"/>
    <field name="creationDateTime" type="datetime" nullable="true"/>
    <field name="temperatureMin" type="float" nullable="true"/>
    <field name="temperatureMax" type="float" nullable="true"/>
    <field name="temperatureMorning" type="float" nullable="true"/>
    <field name="temperatureDay" type="float" nullable="true"/>
    <field name="temperatureEvening" type="float" nullable="true"/>
    <field name="temperatureNight" type="float" nullable="true"/>
    <field name="pressure" type="float" nullable="true"/>
    <field name="humidity" type="float" nullable="true"/>
    <field name="weatherCode" type="integer" nullable="true"/>
    <field name="weather" type="string" length="255" nullable="true"/>
    <field name="weatherDescription" type="string" length="255" nullable="true"/>
    <field name="weatherIcon" type="string" length="5" nullable="true"/>
    <field name="windSpeed" type="float" nullable="true"/>
    <field name="windDeg" type="integer" nullable="true"/>
    <field name="clouds" type="integer" nullable="true"/>
    <field name="rain" type="float" nullable="true"/>
    <many-to-one field="ride" target-entity="AppBundle\Entity\Ride" inversed-by="weathers">
      <join-columns>
        <join-column name="ride_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
