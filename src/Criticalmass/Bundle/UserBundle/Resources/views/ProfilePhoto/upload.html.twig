{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Dein Benutzerprofil{% endblock %}

{% block breadcrumb %}
    <li class="active">Dein Benutzerkonto</li>
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2>
                    Dein Profilfoto
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <img class="img-responsive img-thumbnail" src="{{ vich_uploader_asset(app.user, 'imageFile')|imagine_filter('user_profile_photo_medium') }}"/>
            </div>
        </div>

        <div class="row margin-top-medium">
            <div class="col-md-6 col-md-offset-3 text-center">
                <p>
                    Hier kannst du ein neues Profilfoto von deinem Rechner hochladen:
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                {{ form(profilePhotoForm) }}
            </div>
        </div>
    </div>
{% endblock %}
