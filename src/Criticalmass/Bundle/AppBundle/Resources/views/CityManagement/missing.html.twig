{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2>
                    Critical Mass {{ city.city }}
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div id="map"
                     data-lock-map="true"
                     style="height: 150px;"
                     data-map-center-latitude="{{ city.latitude }}"
                     data-map-center-longitude="{{ city.longitude }}"
                     data-map-zoomlevel="13"
                     data-map-marker-latitude="{{ city.latitude }}"
                     data-map-marker-longitude="{{ city.longitude }}"
                     data-map-marker-color="red"
                     data-map-marker-shape="circle"
                     data-map-marker-icon="fa-university"
                    >
                </div>
            </div>
        </div>

        <div class="row margin-top-medium">
            <div class="col-md-8 col-md-offset-2">
                <p>
                    Es tut uns leid, aber wir haben keine Informationen zu einer Critical Mass in {{ city.city }} in unserer Datenbank.
                </p>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        CriticalMass.loadModule('AutoMap', 'map');
    </script>
{% endblock %}

