{% extends 'AppBundle:Template:StandardTemplate.html.twig' %}

{% block title %}facebook-Statistiken der Critical-Mass-Städte{% endblock %}

{% block breadcrumb %}
    <li class="active">
        facebook-Statistiken der Critical-Mass-Städte
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    facebook-Statistiken
                </h1>

                <p class="lead">
                    Der folgende Graph zeigt die Entwicklung der Like-Angaben auf den Seiten der jeweiligen
                    Critical-Mass-Städte auf facebook.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <canvas id="facebook-likes" style="width: 100%; height: 250px;"></canvas>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        CriticalMass.loadModule('FacebookStatisticPage', null, null, function (page) {
            {% for day in days %}
            page.addDay('{{ day }}');
            {% endfor %}

            {% for city in cities %}
            page.addCity('{{ city.city }}', '{{ city.slug }}', {{ city.colorRed }}, {{ city.colorGreen }}, {{ city.colorBlue }});

            {% for property in filteredProperties[city.slug] %}
            page.addData('{{ property.city.slug }}', '{{ property.createdAt|date('Y-m-d', 'UTC') }}', {{ property.likeNumber|default(0) }});
            {% endfor %}

            {% endfor %}

            page.createFacebookLikesChart($('#facebook-likes'));
        });
    </script>
{% endblock %}