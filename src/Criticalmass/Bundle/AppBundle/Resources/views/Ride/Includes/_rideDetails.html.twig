<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Details</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <dl>
                    <dt>Datum</dt>
                    <dd>{{ ride.dateTime|date('d.m.Y', 'Europe/Berlin') }}</dd>
                    <dt>Uhrzeit</dt>
                    {% if ride.hasTime %}
                        <dd>{{ ride.dateTime|date('H:i', 'Europe/Berlin') }} Uhr</dd>
                    {% else %}
                        <dd>die Uhrzeit ist noch nicht bekannt</dd>
                    {% endif %}
                    <dt>Treffpunkt</dt>
                    {% if ride.hasLocation() %}
                        {% if location %}
                            <dd>
                                <a href="{{ path('caldera_criticalmass_location_ride', { 'citySlug': ride.city.slug, 'rideDate': ride.getFormattedDate() }) }}">
                                    {{ ride.location }}
                                </a>
                            </dd>
                        {% else %}
                            <dd>{{ ride.location }}</dd>
                        {% endif %}
                    {% else %}
                        <dd>noch nicht bekannt</dd>
                    {% endif %}
                    {% if weatherForecast %}
                        <dt>Wetter</dt>
                        <dd>{{ weatherForecast }}</dd>
                    {% endif %}
                </dl>
            </div>
        </div>
    </div>
</div>