<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="services/admin.xml"/>
        <import resource="services/calendar.xml"/>
        <import resource="services/command.xml"/>
        <import resource="services/manager.xml"/>
        <import resource="services/factory.xml"/>
        <import resource="services/facebook.xml"/>
        <import resource="services/statistic.xml"/>
        <import resource="services/photo.xml"/>
        <import resource="services/twig.xml"/>
        <import resource="services/seo_page.xml"/>
        <import resource="services/ride_generator.xml"/>
        <import resource="services/view_storage.xml"/>
        <import resource="services/openstreetmap.xml"/>
        <import resource="services/timeline/timeline.xml"/>
        <import resource="services/timeline/collectors.xml"/>
    </imports>

    <services>
        <service id="critical_markdown" class="Criticalmass\Component\Markdown\CriticalMarkdown"/>

        <service id="caldera.criticalmass.validator.single_ride_day"
                 class="Criticalmass\Bundle\AppBundle\Validator\SingleRideForDayValidator">
            <argument type="service" id="doctrine"/>
            <tag name="validator.constraint_validator"/>
        </service>

        <service id="caldera.criticalmass.image.filter.blur" class="Criticalmass\Component\Image\Filter\BlurFilter">
            <tag name="liip_imagine.filter.loader" loader="blur_filter"/>
        </service>

        <service id="caldera.criticalmass.image.filter.fast_blur"
                 class="Criticalmass\Component\Image\Filter\FastBlurFilter">
            <tag name="liip_imagine.filter.loader" loader="fast_blur_filter"/>
        </service>

        <service id="caldera.criticalmass.routing.object_router" class="Criticalmass\Component\Router\ObjectRouter">
            <argument type="service" id="router.default"/>
        </service>

    </services>
</container>
