<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="false">
            <bind key="$uploadDestinationPhoto">%upload_destination.photo%</bind>
        </defaults>

        <service id="Criticalmass\Component\Image\PhotoFilterer\PhotoFilterer"/>
        <service id="Criticalmass\Component\Image\PhotoGps\PhotoGps"/>
        <service id="Criticalmass\Component\Image\PhotoLocator\PhotoLocator"/>
        <service id="Criticalmass\Component\Image\PhotoUploader\PhotoUploader"/>
    </services>
</container>
