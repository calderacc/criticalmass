{% extends 'Template/StandardTemplate.html.twig' %}

{% set city = ride.city %}

{% block title %}Fotos hochladen{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_city_list') }}">
            St√§dteliste
        </a>
    </li>

    <li>
        <a href="{{ objectPath(city) }}">
            {{ city.title }}
        </a>
    </li>

    <li>
        <a href="{{ objectPath(ride) }}">
            {{ ride.title }}
        </a>
    </li>

    <li class="active">
        Fotos hochladen
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Fotos hochladen
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <form action="{{ objectPath(ride, 'caldera_criticalmass_gallery_legacy_photos_upload_ride') }}"
                          method="post" enctype="multipart/form-data">
                        {{ form_widget(form.imageFile) }}
                        <input type="submit" value="Datei hochladen" class="btn btn-success margin-top-medium">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
