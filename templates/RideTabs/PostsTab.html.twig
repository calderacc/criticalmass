<div class="row mt-2">
    <div class="col-12">
        {% if app.getUser() %}
            <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#modal-add-post">
                Kommentar hinzufügen
            </button>
        {% else %}
            <span class="btn btn-primary pull-right modal-hint" data-modal-hint-title="{{ 'hint_modal.ride.post_write_button.title'|trans }}" data-modal-hint-text="{{ 'hint_modal.ride.post_write_button.text'|trans({'%city%': ride.city.city, '%dateTime%': ride.dateTime|date('d.m.Y')}) }}" data-hint-modal-size="md">
                Kommentar hinzufügen
            </span>
        {% endif %}

        <h3>
            Kommentare zu dieser Tour
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12">
        {{ render(controller('App\\Controller\\PostController::listAction', { 'rideId': ride.getId() })) }}

        {% if app.getUser() %}
            {{ render(controller('App\\Controller\\PostController::writeRideAction', { 'rideId': ride.getId(), 'noButton': true })) }}
        {% endif %}
    </div>
</div>
