{% extends 'Template/StandardTemplate.html.twig' %}

{% block title %}Registrierung{% endblock %}

{% import 'Bootstrap/bootstrap_macros.html.twig' as bootstrap %}

{% block breadcrumb %}
    {{ bootstrap.breadcrumb_item('Registrierung', '', true) }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <h2>
                    Hej {{ user.username }}! Willkommen in der Masse!
                </h2>

                <p>
                    Dein Benutzerkonto wurde gerade erstellt. Du kannst dich ab sofort mit deinem Benutzernamen <code>{{ user.username }}</code> und deinem Kennwort einloggen.
                </p>
            </div>
        </div>
    </div>
{% endblock %}
