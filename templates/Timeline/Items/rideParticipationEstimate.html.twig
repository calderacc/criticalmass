<div class="row mt-3">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-9 col-md-10">
        <div class="row">
            <div class="col-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                schÃ¤tzt, dass {{ item.estimatedParticipants }} Radfahrer an
                <strong>
                    <a href="{{ objectPath(item.ride) }}">
                        {{ item.rideTitle }}
                    </a>
                </strong>
                teilgenommen haben.
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="flipcounter">
                    {% set counter = item.estimatedParticipants %}

                    {% if counter < 1000 %}
                        {% set counter = 0 ~ counter %}
                    {% endif %}

                    {% if counter < 100 %}
                        {% set counter = 0 ~ counter %}
                    {% endif %}

                    {% if counter < 10 %}
                        {% set counter = 0 ~ counter %}
                    {% endif %}

                    <div class="flipbreak">

                    </div>
                    <div class="digit">
                        {{ counter[0:1] }}
                    </div>
                    <div class="digit">
                        {{ counter[1:1] }}
                    </div>
                    <div class="digit">
                        {{ counter[2:1] }}
                    </div>
                    <div class="digit">
                        {{ counter[3:1] }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
