<div class="row mt-3">
    {{ include('Timeline/_includes/user_column.html.twig') }}

    <div class="col-9 col-md-10">
        <div class="row">
            <div class="col-12">
                <strong>
                    {{ item.user.username }}
                </strong>
                hat eine Tour kommentiert:
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a href="{{ objectPath(item.ride) }}#post-{{ item.post.id }}">
                    <h4>
                        {{ item.rideTitle }}
                    </h4>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <p>
                    {{ parse_urls(item.post)|raw }}
                </p>
            </div>
        </div>
    </div>
</div>
