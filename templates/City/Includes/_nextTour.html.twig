<div class="card">
    <div class="card-header">
        Nächste Tour
    </div>
    <div class="card-body">
        {% if currentRide %}
            <div class="row">
                <div class="col-12 text-center">
                    <a href="{{ objectPath(currentRide) }}">
                        <h3 class="mt-0">
                            {{ currentRide.title }}
                        </h3>
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <dl>
                        <dt>Datum</dt>
                        <dd>{{ currentRide.dateTime|date('d.m.Y', currentRide.city.timezone) }}</dd>
                    </dl>
                </div>

                <div class="col-6">
                    <dl>
                        <dt>Uhrzeit</dt>
                        <dd>{{ currentRide.dateTime|date('H:i', currentRide.city.timezone) }} Uhr</dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <dl>
                        <dt>Treffpunkt</dt>
                        {% if currentRide.location and currentRide.latitude and currentRide.longitude %}
                            <dd>{{ currentRide.location }}</dd>
                        {% else %}
                            <a href="{{ objectPath(currentRide, 'caldera_criticalmass_ride_edit') }}">
                                noch nicht bekannt
                            </a>
                        {% endif %}
                    </dl>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-12 text-center">
                    Über eine Radtour ist momentan nichts bekannt.
                </div>
            </div>
        {% endif %}

        <div class="row mt-2">
            <div class="col-12 text-center">
                <a href="{{ objectPath(city, 'caldera_criticalmass_city_listrides') }}" class="btn btn-primary">
                    <i class="fa fa-list"></i>
                    weitere Touren anzeigen
                </a>
            </div>
        </div>
    </div>
</div>
