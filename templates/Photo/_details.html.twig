<div class="card">
    <div class="card-header">
        Detaildaten
    </div>

    <div class="card-body">
        <dl>
            <dt>
                Fotograf
            </dt>
            <dd>
                {{ photo.user.username }}
            </dd>

            <dt>
                Aufnahmedatum
            </dt>
            <dd>
                {{ photo.dateTime|date('d.m.y H:i:s', photo.ride.city.timezone) }} Uhr
            </dd>

            {% if photo.location %}
                <dt>
                    Aufnahmeort
                </dt>
                <dd>
                    {{ photo.location }}
                </dd>
            {% endif %}

            {% if photo.hasCoordinates() %}
                <dt>
                    Koordinaten
                </dt>
                <dd>
                    <a href="https://www.openstreetmap.org/#map=15/{{ photo.latitude }}/{{ photo.longitude }}" target="_blank">
                        {{ photo.latitude }}, {{ photo.longitude }}
                    </a>
                </dd>
            {% endif %}

            {% if exifData and exifData.exposure %}
                <dt>
                    Verschlusszeit
                </dt>
                <dd>
                    {{ exifData.exposure }}"
                </dd>
            {% endif %}

            {% if exifData and exifData.aperture %}
                <dt>
                    Blende
                </dt>
                <dd>
                    {{ exifData.aperture }}
                </dd>
            {% endif %}

            {% if exifData and exifData.iso %}
                <dt>
                    ISO
                </dt>
                <dd>
                    {{ exifData.iso }}
                </dd>
            {% endif %}

            {% if exifData and exifData.focalLength %}
                <dt>
                    Brennweite
                </dt>
                <dd>
                    {{ exifData.focalLength }} mm
                </dd>
            {% endif %}

            {% if exifData and exifData.camera %}
                <dt>
                    Kamera
                </dt>
                <dd>
                    {{ exifData.camera }}
                </dd>
            {% endif %}
        </dl>
    </div>
</div>
