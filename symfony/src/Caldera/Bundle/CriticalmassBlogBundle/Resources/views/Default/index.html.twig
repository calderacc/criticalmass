{% extends 'CalderaCriticalmassBlogBundle:Template:MasterTemplate.html.twig' %}

{% block title %}Fahrradterroristen{% endblock %}

{% block content %}
<div class="container m-t-3">
    <div class="row">
        <div class="col-xs-12 text-xs-center">
            <h1 class="display-2">
                Fahrradterroristen
            </h1>
            <p class="lead">
                Das Critical-Mass-Weblog von Caldera
            </p>
        </div>
    </div>

    {% for post in posts %}
    <div class="row m-b-3">
        <div class="col-xs-10 offset-xs-1">
            <div class="row">
                <div class="col-xs-12">
                    <a href="{{ path(post) }}">
                        <h2>
                            {{ post.title }}
                        </h2>
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-10">
                    {{ post.text | markdown }}
                </div>

                <div class="col-xs-2">
                    <div class="row">
                        <div class="col-xs-12 text-xs-center">
                            <img src="{{ gravatarUrl(post.user, 256) }}" class="img-circle img-fluid" />
                        </div>
                    </div>

                    <div class="row m-t-2">
                        <div class="col-xs-12 text-xs-center">
                            {{ post.user.username }}
                            <br />
                            {{ post.dateTime | date('d.m.Y') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% endfor %}
</div>
{% endblock %}