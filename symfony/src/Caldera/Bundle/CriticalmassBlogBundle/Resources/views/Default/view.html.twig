{% extends 'CalderaCriticalmassBlogBundle:Template:MasterTemplate.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
<div class="container m-t-3">
    <div class="row">
        <div class="col-xs-12 text-xs-center">
            <h1 class="display-2">
                Fahrradterroristen
            </h1>
            <p class="lead">
                Das Critical-Mass-Weblog von Caldera
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-10 offset-xs-1">
            <div class="row">
                <div class="col-xs-12">
                    <h2>
                        {{ post.title }}
                    </h2>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-10">
                    {{ post.text | markdown }}
                </div>

                <div class="col-xs-2">
                    <div class="row">
                        <div class="col-xs-12 text-xs-center">
                            <img src="{{ gravatarUrl(post.user, 256) }}" class="img-circle img-fluid" />
                        </div>
                    </div>

                    <div class="row m-t-2">
                        <div class="col-xs-12 text-xs-center">
                            {{ post.user.username }}
                            <br />
                            {{ post.dateTime | date('d.m.Y') }}
                        </div>
                    </div>

                    {% if post.cities | length > 0 %}
                    <div class="row m-t-3">
                        <div class="col-xs-12 text-xs-center">
                            <p>
                                Tags:
                            </p>

                            <ul class="list-unstyled">
                            {% for city in post.cities %}
                                <li>
                                    <a href="{{ path(city) }}">
                                        #{{ city.slug }}
                                    </a>
                                </li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            <div class="row m-t-3">
                <a name="comments"></a>
                <div class="col-md-12">
                    <h3>
                        Kommentare zu diesem Beitrag
                    </h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ render(controller('CalderaCriticalmassSiteBundle:Post:list', { 'blogPostId': post.id })) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
