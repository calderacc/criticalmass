<div class="row margin-bottom-medium">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
        <div id="map-{{ city.id }}"
             data-map-center-latitude="{{ city.latitude }}"
             data-map-center-longitude="{{ city.longitude }}"
             data-map-zoomlevel="13"
             data-lock-map="true"
             data-map-marker-latitude="{{ city.latitude }}"
             data-map-marker-longitude="{{ city.longitude }}"
             data-map-marker-color="red"
             data-map-marker-icon="fa-university"
             data-map-marker-shape="circle"
             style="height: 150px;">
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ objectPath(city) }}">
                    <h4>
                        {{ city.title }}
                    </h4>
                </a>
            </div>
        </div>

        {% if city.isStandardable %}
            <div class="row">
                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                    <dl>
                        <dt>
                            Turnus:
                        </dt>

                        <dd>
                            {{ city.getEventDateTimeString() }}
                        </dd>
                    </dl>
                </div>

                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    <dl>
                        <dt>
                            Treffpunkt:
                        </dt>

                        <dd>
                            {{ city.standardLocation }}
                        </dd>
                    </dl>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<script type="text/javascript">
    CriticalMass.loadModule('AutoMap', 'map-{{ city.id }}');
</script>