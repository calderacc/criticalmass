{% extends 'CalderaCriticalmassCoreBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Diskussionen{% endblock %}

{% block breadcrumb %}
    <li class="active">Diskussionen</li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>
                            Beschreibung
                        </th>
                        <th>
                            Themen
                        </th>
                        <th>
                            Beiträge
                        </th>
                        <th>
                            letzter Beitrag
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td colspan="4">
                            <h4>
                                Allgemeines
                            </h4>
                        </td>
                    </tr>
                    {% for board in boards %}
                        <tr>
                            <td>
                                <a href="{{ objectPath(board) }}">
                                    <h5 class="no-margin-top">
                                        {{ board.title }}
                                    </h5>
                                </a>

                                <small>
                                    {{ board.description }}
                                </small>
                            </td>
                            <td>
                                {{ board.threadNumber }}
                            </td>
                            <td>
                                {{ board.postNumber }}
                            </td>
                            <td>
                                {% if board.lastThread %}
                                    <img class="pull-left" style="margin-right: 5px;"
                                         src="{{ gravatarUrl(board.lastThread.lastPost.user, 36) }}" alt="..."/>
                                    <a href="{{ objectPath(board.lastThread) }}">
                                        <strong>{{ board.lastThread.title }}</strong>
                                    </a>
                                    <br/>
                                    von <strong>{{ board.lastThread.lastPost.user.username }}</strong><br/>
                                    {{ board.lastThread.lastPost.dateTime|date('d.m.Y H:i', 'Europe/Berlin') }}&nbsp;Uhr
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}

                    <tr>
                        <td colspan="4">
                            <h4>
                                Städte
                            </h4>
                        </td>
                    </tr>
                    {% for city in cities %}
                        <tr>
                            <td>
                                <a href="{{ path('caldera_criticalmass_board_listcitythreads', { citySlug: city.getMainSlugString() }) }}">
                                    <h5 class="no-margin-top">
                                        {{ city.title }}
                                    </h5>
                                </a>

                                <small>
                                    {{ city.punchline }}
                                </small>
                            </td>
                            <td>
                                {{ city.threadNumber }}
                            </td>
                            <td>
                                {{ city.postNumber }}
                            </td>
                            <td>
                                {% if city.lastThread %}
                                    <img class="pull-left" style="margin-right: 5px;"
                                         src="{{ gravatarUrl(city.lastThread.lastPost.user, 36) }}" alt="..."/>
                                    <a href="{{ objectPath(city.lastThread) }}">
                                        <strong>{{ city.lastThread.title }}</strong>
                                    </a>
                                    <br/>
                                    von <strong>{{ city.lastThread.lastPost.user.username }}</strong><br/>
                                    {{ city.lastThread.lastPost.dateTime|date('d.m.Y H:i', 'Europe/Berlin') }}&nbsp;Uhr
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}