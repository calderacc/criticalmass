<div role="tabpanel" class="tab-pane active" id="details">
    <div class="row">
        <div class="col-md-12">
            {% if app.getUser() %}
                <div class="btn-group pull-right" style="margin-top: 16px;">
                    <a class="btn btn-success"
                       href="{{ path('caldera_criticalmass_desktop_ride_edit', { citySlug: ride.getCity().getMainSlugString(), rideDate: ride.getDateTime().format('Y-m-d') } ) }}"
                       title="Tour bearbeiten">
                        <i class="fa fa-cogs"></i> Tour editieren
                    </a>
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ path('caldera_criticalmass_ride_facebookupdate', { citySlug: ride.getCity().getMainSlugString(), rideDate: ride.getDateTime().format('Y-m-d') } ) }}">
                                von facebook aktualisieren
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}

            <h3>{{ ride.getFancyTitle() }}</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-push-8">
            {% include 'CalderaCriticalmassCoreBundle:Ride:Includes/_live.html.twig' with { 'ride': ride } %}
            {% include 'CalderaCriticalmassCoreBundle:Ride:Includes/_rideDetails.html.twig' with { 'ride': ride, 'weatherForecast': weatherForecast, 'location': location } %}
            {% include 'CalderaCriticalmassCoreBundle:Ride:Includes/_participationNumbers.html.twig' with { 'ride': ride } %}
            {% include 'CalderaCriticalmassCoreBundle:Ride:Includes/_socialMedia.html.twig' with { 'ride': ride } %}
            {% include 'CalderaCriticalmassCoreBundle:Ride:Includes/_statistic.html.twig' with { 'ride': ride } %}
        </div>

        <div class="col-xs-12 col-sm-8 col-sm-pull-4">
            {% if ride.description %}
                {{ ride.description|markdown }}
            {% endif %}
        </div>
    </div>
</div>