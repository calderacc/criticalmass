<div class="row margin-bottom-medium">
    <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1">
        <time>{{ item.dateTime|date('d.m.Y') }}</time>
        <time>{{ item.dateTime|date('H:i') }}&nbsp;Uhr</time>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
        <a href="{{ path(item.previewPhoto) }}">
            <img src="{{ vich_uploader_asset(item.previewPhoto, 'imageFile')|imagine_filter('gallery_photo_thumb') }}" class="img-responsive" />
        </a>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        <strong>
            {{ item.username }}
        </strong>
        hat
        <a href="{{ path('caldera_criticalmass_photo_ride_list', { citySlug: item.city.slug, rideDate: item.ride.getFormattedDate() }) }}">
            {{ item.counter }} Fotos
        </a> zur Tour
        <strong>
            <a href="{{ path(item.ride) }}">
                {{ item.rideTitle }}
            </a>
        </strong>
        hochgeladen
    </div>
</div>