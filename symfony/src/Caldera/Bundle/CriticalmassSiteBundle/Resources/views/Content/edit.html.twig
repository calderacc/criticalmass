{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Inhalt editieren{% endblock %}

{% block breadcrumb %}
        <li>
            <a href="{{ objectPath(content) }}">
                {{ content.title }}
            </a>
        </li>
        <li class="active">
            Inhalt bearbeiten
        </li>
{% endblock %}

{% block content %}
<div class="container">
    {% if hasSaved %}
    <div class="alert alert-success" role="alert">Deine Änderungen wurden gespeichert. <a href="{{ path('caldera_criticalmass_content_display', { slug: content.slug } ) }}">Zurück zur vorigen Seite?</a></div>
    {% endif %}
    
    <div class="row">
        <div class="col-md-12">
            <h1>Inhalt editieren</h1>
        </div>
    </div>
    
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label" for="title">Titel:</label>
                    {{ form_widget(form.title, { 'attr' : { 'class': 'form-control' } }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label" for="description">Beschreibung:</label>
                    {{ form_widget(form.text, { 'attr' : { 'class': 'form-control', 'rows': '20' } }) }}
                </div>
            </div>
        </div>

        {{ form_widget(form._token) }}

        <div class="btn-group pull-right" role="group" aria-label="...">
            <a href="{{ path('caldera_criticalmass_content_display', { slug: content.slug } ) }}" class="btn btn-default">
                <i class="halflings remove"></i>
                Abbrechen
            </a>
            <button type="submit" class="btn btn-success">
                <i class="halflings floppy_disk"></i>
                Speichern
            </button>
        </div>
    </form>
</div>
{% endblock %}