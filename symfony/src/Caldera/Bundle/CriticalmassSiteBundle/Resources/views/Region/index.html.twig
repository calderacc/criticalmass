{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Critical Mass in {{ region.name }}{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_region_world') }}">
            Verzeichnis
        </a>
    </li>

    {% if (region.parent and region.parent.parent and region.parent.parent.parent and not region.parent.parent.parent.isWorld()) %}
        <li>
            <a href="{{ path(region.parent.parent.parent) }}">
                {{ region.parent.parent.parent.name }}
            </a>
        </li>
    {% endif %}

    {% if (region.parent and region.parent.parent and not region.parent.parent.isWorld()) %}
        <li>
            <a href="{{ path(region.parent.parent) }}">
                {{ region.parent.parent.name }}
            </a>
        </li>
    {% endif %}


    {% if (region.parent and not region.parent.isWorld()) %}
        <li>
            <a href="{{ path(region.parent) }}">
                {{ region.parent.name }}
            </a>
        </li>
    {% endif %}

    <li>
        <a href="{{ path(region) }}">
            {{ region.name }}
        </a>
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Critical Mass in {{ region.name }}
                </h1>
            </div>
        </div>

        {% if regions|length > 0 %}
        <div class="row">
            <div class="col-md-12">
                <h2>
                    Unterregionen in {{ region.name }}
                </h2>
            </div>
        </div>

        <div class="row">
            {% for region2 in regions %}
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center">
                                <h4>
                                    <a href="{{ path(region2) }}">
                                        {{ region2.name }}
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}

        {% if cities|length > 0 %}
        <div class="row">
            <div class="col-md-12">
                <h2>
                    St√§dte in {{ region.name }}
                </h2>
            </div>
        </div>

        <div class="row">
            {% for city in cities %}
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center">
                                <h4>
                                    <a href="{{ path(city) }}">
                                        {{ city.title }}
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
{% endblock %}
