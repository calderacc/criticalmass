<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">NÃ¤chste Tour</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <a href="{{ path('caldera_criticalmass_ride_show', { citySlug: currentRide.city.getMainSlugString(), rideDate: currentRide.getFormattedDate() }) }}"><h3>{{ currentRide.getFancyTitle() }}</h3></a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dt>Datum</dt>
                    <dd>{{ currentRide.dateTime.format('d.m.Y') }}</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <dl>
                    <dt>Uhrzeit</dt>
                    <dd>{{ currentRide.dateTime.format('H:i') }} Uhr</dd>
                </dl>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <dl>
                    <dt>Treffpunkt</dt>
                    {% if currentRide.hasLocation() %}
                    <dd>{{ currentRide.location }}</dd>
                    {% else %}
                    <dd>noch nicht bekannt</dd>
                    {% endif %}
                </dl>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <a href="#" class="btn btn-success">
                        <i class="fa fa-list"></i>
                        weitere Touren anzeigen</a>
                </div>
            </div>
        </div>
    </div>
</div>