{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Deine Tracks{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_desktop_city_list') }}">
            St√§dteliste
        </a>
    </li>
    <li>
        <a href="{{ path(ride.city) }}">
            {{ ride.city.city }}
        </a>
    </li>
    <li>
        <a href="{{ path(ride) }}">
            {{ ride.getFancyTitle() }}
        </a>
    </li>
    <li class="active">
        Timelapse
    </li>
{% endblock %}

{% block additionalHeaderElements %}
    <style>
        div.user-position {
            overflow: hidden;
            border-radius: 50%;
            box-shadow: 0 0 15px 0 black;
        }

        div.user-position div.user-position-inline {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border-width: 5px;
            border-style: solid;
            background-position: -5px -5px;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="map" style="height: 350px;"></div>
            </div>
        </div>

        <div class="row margin-top-medium">
            <div class="col-md-8">

            </div>

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Steuerung</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="text-center">
                                    <div class="btn-group" id="control-buttons" role="group" aria-label="...">
                                        <button type="button" id="step-backward-button" class="btn btn-default">
                                            <i class="fa fa-backward"></i>
                                        </button>
                                        <button type="button" id="pause-button"  class="btn btn-default">
                                            <i class="fa fa-pause"></i>
                                        </button>
                                        <button type="button" id="stop-button"  class="btn btn-default">
                                            <i class="fa fa-stop"></i>
                                        </button>
                                        <button type="button" id="play-button" class="btn btn-default">
                                            <i class="fa fa-play"></i>
                                        </button>
                                        <button type="button" id="step-forward-button"  class="btn btn-default">
                                            <i class="fa fa-forward"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row margin-top-medium">
                            <div class="col-md-12">
                                Geschwindigkeit:
                            </div>
                        </div>

                        <div class="row margin-top-medium">
                            <div class="col-md-12">
                                <input id="speed-slider-input" type="text" style="width: 100%;" />
                            </div>
                        </div>

                        <div class="row margin-top-medium">
                            <div class="col-md-12">
                                Zeitpunkt:
                            </div>
                        </div>

                        <div class="row margin-top-medium">
                            <div class="col-md-12">
                                <input id="time-slider-input" type="text" style="width: 100%;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        CriticalMass.loadModule('TimelapsePage', null, null, function(timelapsePage) {
            timelapsePage.setCity('{{ ride.getCity().getCity() }}', '{{ ride.getCity().getTitle() }}', '{{ ride.getCity().getMainSlugString() }}', '{{ ride.getCity().getDescription()|e('js') }}', {{ride.getCity().getLatitude()}},{{ride.getCity().getLongitude()}});
            timelapsePage.setRide('{{ ride.getFancyTitle() }}', '{{ ride.description|e('js') }}', {{ride.latitude}}, {{ride.longitude}},'{{ ride.location }}', '{{ ride.dateTime.format('d.m.Y') }}', '{{ ride.dateTime.format('H:i') }}', '{{ ride.weatherForecast }}');

            {% for track in tracks %}
            timelapsePage.addTrack({{ track.id }}, {{ track.colorRed }}, {{ track.colorGreen }}, {{ track.colorBlue }});
            {% endfor %}
        });
    </script>
{% endblock %}