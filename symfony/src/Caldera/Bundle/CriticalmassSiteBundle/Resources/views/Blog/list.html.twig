{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}criticalmass.in-Blog{% endblock %}

{% block content %}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('caldera_criticalmass_frontpage') }}">criticalmass.in</a></li>
            <li class="active">criticalmass.in-Blog</li>
        </ol>
        
        {% for article in articles %}
            <div class="row">
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>{{ article.getTitle() }}</h2>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            {{ article.getText()|markdown }}
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Über diesen Artikel</h3>
                        </div>
                        <div class="panel-body">
                            Autor: {{ article.getUser().getUsername() }}<br />
                            Veröffentlicht: {{ article.getDateTime().format('d.m.Y H:i') }} Uhr
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}