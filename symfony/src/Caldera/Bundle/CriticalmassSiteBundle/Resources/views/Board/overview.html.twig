{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}{% endblock %}

{% block breadcrumb %}
    <li class="active">Diskussionen</li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Beschreibung
                            </th>
                            <th>
                                Themen
                            </th>
                            <th>
                                Beitr√§ge
                            </th>
                            <th>
                                letzter Beitrag
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for board in boards %}
                        <tr>
                            <td>
                                <a href="{{ path(board) }}">
                                    {{ board.title }}
                                </a>
                            </td>
                            <td>
                                {{ board.threadNumber }}
                            </td>
                            <td>
                                {{ board.postNumber }}
                            </td>
                            <td>
                                {% if board.lastThread %}
                                    <img class="pull-left" style="margin-right: 5px;" src="{{ gravatarUrl(board.lastThread.lastPost.user, 36) }}" alt="..." />
                                    <a href="{{ path(board.lastThread) }}">
                                        <strong>{{ board.lastThread.title }}</strong>
                                    </a>
                                    <br />
                                    von <strong>{{ board.lastThread.lastPost.user.username }}</strong><br />
                                    {{ board.lastThread.lastPost.dateTime.format('d.m.Y H:i') }}&nbsp;Uhr
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}