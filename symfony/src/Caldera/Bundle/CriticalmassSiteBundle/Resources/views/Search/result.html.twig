{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Suchergebnisse{% endblock %}


{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Suchergebnisse für „“
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <ul>
                {% for city in resultSet.getAggregations().city.buckets %}
                    <li>
                        <input type="checkbox" /> {{ city.key }} ({{ city.doc_count }})
                    </li>
                {% endfor %}
                </ul>

                <ul>
                {% for country in resultSet.getAggregations().country.buckets %}
                    <li>
                        {{ country.key }} ({{ country.doc_count }})
                    </li>
                {% endfor %}
                </ul>
            </div>

            <div class="col-md-9">
                {% for result in results %}
                <div class="row">
                    <div class="col-md-12">
                    {% if result.standardLocation is defined %}
                        Stadt: {{ result.title }}
                    {% else %}
                        Tour: {{ result.getFancyTitle() }}
                    {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
