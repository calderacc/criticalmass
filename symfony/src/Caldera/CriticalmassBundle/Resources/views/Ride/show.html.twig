{% extends 'CalderaCriticalmassBundle:Default:layout.html.twig' %}

{% block body %}
    <h1>Tour-Details</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ entity.date|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Uhrzeit</th>
                <td>{% if entity.hasTime %} {{ entity.time|date('H:i') }} {% else %} <em>undefiniert {% endif %}</td>
            </tr>
            <tr>
                <th>Treffpunkt</th>
                <td>{% if entity.hasLocation %} {{ entity.location }} {% else %} <em>undefiniert {% endif %}</td>
            </tr>
            <tr>
                <th>Map</th>
                <td>{{ entity.map }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_ride') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_ride_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_ride_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
