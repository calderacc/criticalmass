{% extends 'CalderaCriticalmassBundle:Default:layout.html.twig' %}

{% block body %}
    <h1>Tourdetails definieren</h1>

    <form action="{{ path('admin_ride_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      {{ form_errors(edit_form) }}
        <input type="hidden" name="_method" value="PUT" />
        <div>
          <label>Stadt</label>
            {{ form_errors(edit_form.city) }}
            {{ form_widget(edit_form.city) }}
        </div>

        <div>
          <label>Datum</label>
            {{ form_errors(edit_form.date) }}
            {{ form_widget(edit_form.date) }}
        </div>

        <div>
          <label>Uhrzeit</label>
            {{ form_errors(edit_form.time) }}
            {{ form_widget(edit_form.time) }}
        </div>

        <div>
          <label>
            {{ form_errors(edit_form.hasTime) }}
            {{ form_widget(edit_form.hasTime, {'attr': {'type': 'checkbox'}}) }} Uhrzeit anzeigen?</label>
        </div>

        <div>
          <label>Treffpunkt</label>
            {{ form_errors(edit_form.location) }}
            {{ form_widget(edit_form.location) }}
        </div>

        <div>
          <label>
            {{ form_errors(edit_form.hasLocation) }}
            {{ form_widget(edit_form.hasLocation, {'attr': {'type': 'checkbox'}}) }} Treffpunkt anzeigen?</label>
        </div>

        <div>
          <label>Genaue Adresse des Treffpunktes</label>
            {{ form_errors(edit_form.mapLocation) }}
            {{ form_widget(edit_form.mapLocation) }}
        </div>

        <div id="geocoding-map" style="width: 300px; height: 300px;"></div>

        <div>
          <label>Breitengrad des Treffpunktes</label>
            {{ form_errors(edit_form.latitude) }}
            {{ form_widget(edit_form.latitude) }}
        </div>

        <div>
          <label>LÃ¤ngengrad des Treffpunktes</label>
            {{ form_errors(edit_form.longitude) }}
            {{ form_widget(edit_form.longitude) }}
        </div>

        {{ form_widget(edit_form._token) }}
        <p>
            <button type="submit">Speichern</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_ride') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_ride_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
