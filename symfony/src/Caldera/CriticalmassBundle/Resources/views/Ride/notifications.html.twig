{% extends 'CalderaCriticalmassBundle:Default:layout.html.twig' %}

{% block body %}
	<h1>Benachrichtigungen senden</h1>

	<div data-role="controlgroup">
		<button id="notify_ride">Tour ankündigen</button>

		{% if ride.hasTime %}
		<button id="notify_time">Uhrzeit ankündigen</button>
		{% else %}
		<button disabled="disabled">Uhrzeit ankündigen</button>
		{% endif %}

		{% if ride.hasLocation %}
		<button id="notify_location">Treffpunkt ankündigen</button>
		{% else %}
		<button disabled="disabled">Treffpunkt ankündigen</button>
		{% endif %}

	</div>
{% endblock %}
