{% extends 'CalderaCriticalmassBundle:Default:layout.html.twig' %}

{% block body %}
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

	<form action="{{ path('login_check') }}" method="post">
		<label for="username">Username:</label>
		<input type="text" name="_username" id="username" value="{{ last_username }}" data-clear-btn="true" />

		<label for="password">Password:</label>
		<input type="password" name="_password" id="password" value="" data-clear-btn="true" />

		<button type="submit">login</button>
	</form>
{% endblock %}