{% extends 'CalderaCriticalmassDesktopBundle:Common:StandardTemplate.html.twig' %}

{% block title %}Deine Tracks{% endblock %}

{% block content %}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="#">criticalmass.in</a></li>
            <li><a href="{{ path('sonata_user_profile_show') }}">Dein Profil</a></li>
            <li class="active">Deine Tracks</li>
        </ol>

        <h1>Hier warst du schon mal.</h1>

        <p><a href="{{ path('caldera_criticalmass_statistic_track_upload') }}" class="btn btn-success pull-right">Track hochladen</a></p>

        <table class="table">
            <tr>
                <th>Datum</th>
                <th>Stadt</th>
                <th>Tour</th>
                <th>Beginn</th>
                <th>Ende</th>
                <th>Wegpunkte</th>
                <th>Optionen</th>
            </tr>
            {% for track in tracks %}
            <tr>
                <td><a href="{{ path('caldera_criticalmass_statistic_track_view', { 'trackId': track.getId() }) }}">{{ track.getRide().getDateTime().format('d. m. Y') }}</a></td>
                <td><a href="{{ path('caldera_criticalmass_desktop_city_show', { 'citySlug': track.getRide().getCity().getMainSlugString() }) }}">{{ track.getRide().getCity().getCity() }}</a></td>
                <td>{% if track.getRide().getTitle() %}
                {{ track.getRide().getTitle() }}
                {% else %}
                {{ track.getRide().getCity().getTitle() }}
                {% endif %}</td>
                <td>{{ track.getStartDateTime().format('H:i') }} Uhr</td>
                <td>{{ track.getEndDateTime().format('H:i') }} Uhr</td>
                <td>{{ track.getPoints() }}</td>
                <td><button type="button" class="btn btn-default btn-xs"><span class="fa fa-trash-o"></span></button></td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}