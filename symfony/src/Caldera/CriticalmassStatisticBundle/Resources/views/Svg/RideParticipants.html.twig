{% set participants = ride.getEstimatedParticipants %}
{% set participants = 5675 %}
{% set blockSize = 100 %}

{% if participants > 0 %}
    {% set participantsPerBlock = 100 %}
    {% set blocksPerRow = 10 %}
    
    {% set blocks = participants // participantsPerBlock %}
    {% set remainder = participants % participantsPerBlock %}
    
    {% set rows = blocks // blocksPerRow %}

<svg width="{{ blocksPerRow * 11 - 1 }}" height="{{ (rows + 1) * 11 }}px">
    {% for y in 0..(rows - 1) %}
        {% for x in 0..(blocksPerRow - 1) %}
            <rect x="{{ (x * 10 + x) }}px" y="{{ (y * 10 + y) }}px" width="10px" height="10px" fill="#000000"></rect>
        {% endfor %}
    {% endfor %}
    
    {% set remainingBlocks = blocks % blocksPerRow %}
    {% for x in 0..(remainingBlocks - 1) %}
        <rect x="{{ (x * 10 + x) }}px" y="{{ (rows * 11) }}px" width="10px" height="10px" fill="#000000"></rect>
    {% endfor %}
        
    {% set remainderWidth = 0.1 * remainder %}
    <rect x="{{ (remainingBlocks * 11) }}px" y="{{ (rows * 11) }}px" width="{{ remainderWidth }}px" height="10px" fill="#000000"></rect>
</svg>

{% endif %}