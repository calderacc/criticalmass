{% extends 'CalderaCriticalmassDesktopBundle:Common:StandardTemplate.html.twig' %}

{% block content %}

<div class="container">
    <div class="row">
        {% for photo in photos %}
            <div class="col-lg-1 col-md-4 col-xs-6 thumb">
                <a href="{{ path('criticalmass_gallery_photos_show', {'photoId': photo.getId()}) }}" class="thumbnail">
                    <img src=" {{ photo.toThumbnailPath(photo.getFilePathByDepth(2)) }} " alt="{{ photo.getDescription() }}" img="img-responsive">
                </a>
                {#<a href="http://beta.criticalmass.cm/app_dev.php/photos/edit/{{ photo.getId() }}"><i class="fa fa-wrench"></i></a>#}
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}