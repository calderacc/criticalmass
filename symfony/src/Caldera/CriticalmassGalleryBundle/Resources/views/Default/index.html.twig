<script>
     window.onload = function() {
     $('a.thumbnail').click(function (event) {
     event.preventDefault();

     var photoId = $(this).data('photoid');

     var photo = getPhoto(photoId);

     $('#bigPhoto').prop('src', photo.path);
     $('#photoDescription').text(photo.description);
     $('#photoEdit').prop('href', 'http://beta.criticalmass.cm/app_dev.php/photos/edit/' + photo.id);

     $('#modalPhoto').modal('show');

     });
     }

</script>