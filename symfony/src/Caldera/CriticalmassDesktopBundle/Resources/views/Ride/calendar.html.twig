{% extends 'CalderaCriticalmassDesktopBundle:Common:StandardTemplate.html.twig' %}

{% block title %}Kalender{% endblock %}

{% block content %}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="#">criticalmass.in</a></li>
            <li><a href="{{ path('caldera_criticalmass_desktop_city_list') }}">St√§dteliste</a></li>
            <li class="active">Kalender</li>
        </ol>

        <h1>hic sunt birotarii</h1>

        {% for dateString, rides in rides %}
        <div class="row">
            <h4>{{ dateString|date('l, d. F Y') }}</h4>
        </div>

        <table class="table">
            <tr>
                <th class="col-md-2">Stadt</th>
                <th class="col-md-2">Uhrzeit</th>
                <th class="col-md-4">Treffpunkt</th>
                <th class="col-md-4">Titel</th>
            </tr>

            {% for ride in rides %}
            <tr>
                <td class="col-md-2">{{ ride.getCity() }}</td>
                <td class="col-md-2">{{ ride.getTime().format('H:i') }} Uhr</td>
                <td class="col-md-4">{% if ride.getHasLocation() %}{{ ride.getLocation() }}{% endif %}</td>
                <td class="col-md-4">{{ ride.getFancyTitle() }}</td>
            </tr>
            {% endfor %}
        </table>
        {% endfor %}
    </div>
{% endblock %}