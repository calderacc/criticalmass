<html>
<head>
    <title>CalderaCriticalmassDesktopBundle</title>
    {% stylesheets '@CalderaCriticalmassDesktopBundle/Resources/public/css/*.css' filter="cssrewrite" %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <style>
        #livemap-canvas
        {
            width: 100%;
            height: 100%;
        }


    </style>
    <script>
        var map;
        var elementsArray = [];
        var infoWindowArray = [];

        function addLoadedMarkers(result)
        {
            for (cityId in result.cities)
            {
                var city = result.cities[cityId];

                elementsArray[cityId]  = new google.maps.Marker({
                    position: new google.maps.LatLng(city.center.latitude, city.center.longitude),
                    map: map,
                    title: city.city,
                    maxWidth: 500
                });

                infoWindowArray[cityId] = new google.maps.InfoWindow({ content: city.description });

                google.maps.event.addListener(elementsArray[cityId], 'click', function(cityId) {
                    return function() {
                        infoWindowArray[cityId].open(map, elementsArray[cityId]);
                    }
                }(cityId));
            }
        }

        function startInitialization()
        {
            var pos = new google.maps.LatLng(53.0, 9.0);

            var mapOptions = {
                zoom: 5,
                center: pos,
                mapTypeId: google.maps.MapTypeId.TERRAIN
            }

            map = new google.maps.Map(document.getElementById('livemap-canvas'), mapOptions);

            $.ajax({
                type: 'GET',
                url: '/api/listcities',
                cache: false,
                success: addLoadedMarkers
            });
        }

        google.maps.event.addDomListener(window, 'load', startInitialization);
    </script>
</head>
<body>
<header id="mainheader">lalalala</header>
<div id="livemap-canvas"></div>
</body>
</html>