{% extends 'CalderaCriticalmassDesktopBundle:Common:StandardTemplate.html.twig' %}

{% block title %}Timeline{% endblock %}
{% block content %}
    {{ form(form) }}
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('caldera_criticalmass_desktop_index') }}">criticalmass.in</a></li>
            <li class="active">Timeline</li>
        </ol>

        <h1>Schau was gerade passiert.</h1>

        {% for post in posts %}
            <div class="row">
                <img src="http://www.gravatar.com/avatar/{{ post.getUser().getGravatarHash() }}&s=64" />

                <strong>{{ post.getUser().getUsername() }}</strong>
                <date>{{ post.getDateTime().format('d.m.Y H:i') }} Uhr</date>
            {{ post.getMessage() }}
            </div>
        {% endfor %}
        </div>
{% endblock %}