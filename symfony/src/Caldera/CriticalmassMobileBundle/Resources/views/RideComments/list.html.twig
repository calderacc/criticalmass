{% extends 'CalderaCriticalmassBundle:Default:layout.html.twig' %}

{% block title %}Kommentare{% endblock %}

{% block body %}

{% if app.user != null %}
	<form action="{{ path('caldera_criticalmass_addcomment', {'citySlug': 'hamburg'}) }}" method="post" {{ form_enctype(form) }} data-ajax="false">
		{{ form_widget(form) }}
		<input type="submit" value="Absenden" />
	</form>
{% endif %}

	<ul data-role="listview">
		{% for comment in comments %}
		<li>
			<p class="ui-li-aside">{{ comment.getCreationDateTime|date('d.m. H:i') }}</p>
			<img src="http://www.gravatar.com/avatar/{{ comment.getUser.getGravatarHash }}?s=200" />
			<h3 class="ui-li-heading">{{ comment.getUser.getUsername }}</h3>
			<p>{{ comment.getText }}</p>
			{% if comment.getImage %}
				<img src="/uploads/commentimages/{{ comment.getImage.getName }}-{{ comment.getImage.getResizedWidth }}x{{ comment.getImage.getResizedHeight }}.jpeg" class="commentimage" />
			{% endif %}
		</li>
	{% endfor %}
	</ul>

{% endblock %}
